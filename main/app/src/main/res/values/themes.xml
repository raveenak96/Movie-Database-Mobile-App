<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.USCFilms" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorPrimaryDark">@color/darkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:background">@color/darkColor</item>
        <item name="android:windowBackground">@color/darkColor</item>
        <item name="android:colorBackground">@color/darkColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkColor</item>


        <!-- Customize your theme here. -->
    </style>
    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:statusBarColor">@color/darkColor</item>
    </style>

    <style name="CustomTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="BottomNavTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/blue</item>
    </style>
    <style name="PopupMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="WatchlistRippleColor" >
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>


</resources>